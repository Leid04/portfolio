---
import '@fontsource/comfortaa';

interface Props {
	description: string;
	title: string;
}
const { description, title } = Astro.props;
---
<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-[conic-gradient(at_top_right,_var(--tw-gradient-stops))] from-gray-700 via-gray-900 to-black">
		<slot />
	</body>
</html>

<style is:global>
	:root { color-scheme: light dark; }
	html { font-family: 'Comfortaa', system-ui; }
	body{
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}
</style>
