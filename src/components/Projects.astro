---
import GitHub from './icons/GitHub.astro';
import Goto from './icons/Goto.astro';
import { TAGS }  from './Tags.astro';

const PROJECTS = [
  {
    title: 'Aula Emprende',
    desc: 'Think of it like a friendly online school where students can easily learn how to kickstart their own businesses. It is all about simple lessons and activities that make entrepreneurship fun and understandable.',
    link: 'https://aula-emp.vercel.app/',
    github: 'https://github.com/revudev/tfg-aula',
    image: '/tfg-aula.webp',
    tags: [TAGS.Angular, TAGS.Tailwind, TAGS.Express, TAGS.TypeScript]
  }
];
---
  {PROJECTS.map(({title, desc, link, github, image, tags}) => (
    <div class="flex flex-col gap-5 my-10 md:flex-row">
      <img class="rounded shadow-2xl shadow-white/20 " src={image} alt="Projecto imÃ¡gen" width="400px" height="400px"/>
      <article class="flex-1">
        <h3 class="mb-2 text-2xl font-semibold">{title}</h3>
        <ul class="flex flex-wrap gap-2 mb-3">
          {tags.map(tag => (
            <li>
              <span class={`flex items-center gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2`}>
                <tag.icon class="w-5 h-5" />
                {tag.name}
              </span>
            </li>
          ))}
        </ul>
        <p class="mb-4 text-lg text-pretty lg:text-1xl opacity-70">{desc}</p>
        <div class="flex gap-x-2">
          <a href={github} class="flex px-3 py-2 text-white rounded gap-x-2 bg-slate-800">
            <GitHub class="size-5"/>
            GitHub
          </a>
          <a href={link} class="flex px-3 py-2 text-white rounded gap-x-2 bg-slate-800">
            <Goto class="size-5"/>
            Go to
          </a>
        </div>
      </article>
    </div>
  ))}